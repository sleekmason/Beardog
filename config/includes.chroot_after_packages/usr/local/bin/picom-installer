    [0;36mhttps://github.com/yshui/picom[0m
   
   --------------------------------------------------------------
   
   [0;32mPlease press enter to install Picom.[0m
   
   --------------------------------------------------------------
   
   
   Or close this terminal window to quit the install." ;
   if : >/dev/tcp/8.8.8.8/53; then
echo "" 
sudo apt update && sudo apt install picom &&
echo ""
echo ""
echo ""
echo "-----------------------------------------------------------"
echo ""
echo "[0;32mAll Finished![0m"
echo "" 
echo "" 
echo "[0;32mDon't forget to add 'picom &' to ~/.config/openbox/autostart.[0m"
echo ""
echo "-----------------------------------------------------------"
else
echo ""
 echo "   [0;31m-----------------------------------------------------[0m"
 echo ""
 echo "   [0;33mNo Internet connection. Please connect and try again.[0m"
